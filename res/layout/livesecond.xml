<?xml version="1.0" encoding="utf-8"?>
<!-- 直播 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <!-- 头部 -->

    <include
        android:id="@+id/topBar"
        android:layout_alignParentTop="true"
        layout="@layout/topbar" />
    <!-- 底部左侧分类列表及频道列表 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="276dip"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/liveRecommandItem"
                android:layout_width="276dip"
                android:layout_height="50dp"
                android:background="@drawable/recommend_perfit"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/recommend_perfit"
                    android:textColor="#f7ffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <ExpandableListView
                android:id="@+id/live_channel_listview"
                android:layout_width="276dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="55dip"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/channel_list_divider"
                android:drawSelectorOnTop="true"
                android:fadingEdge="none"
                android:scrollbars="vertical" />
        </LinearLayout>

        <!-- 左右分隔线及阴影部分 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/channel_line" />
        <!-- 精彩推荐 -->

        <LinearLayout
            android:id="@+id/liveRecommand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dip"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/switcher_bg" >

                <TextView
                    android:id="@+id/liveToday"
                    android:layout_width="106dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="@string/today"
                    android:textColor="#FFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/liveTomo"
                    android:layout_width="106dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="@string/tomorrow"
                    android:textColor="#7F7F7F"
                    android:textSize="16sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/liveRCView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="56dip"
                android:columnWidth="136dip"
                android:gravity="center"
                android:horizontalSpacing="35dip"
                android:numColumns="2"
                android:scrollbars="vertical"
                android:verticalSpacing="35dip" />
        </LinearLayout>
        <!-- 频道内容 -->

        <LinearLayout
            android:id="@+id/liveContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dip"
                    android:layout_marginBottom="10dip"
                    android:paddingLeft="25dp" >

                    <com.coship.ott.view.CustormImageView
                        android:id="@+id/channelLogo"
                        android:layout_width="113dp"
                        android:layout_height="108dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="40dp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/channelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/channelLogo"
                        android:layout_marginLeft="5dp"
                        android:maxLines="2"
                        android:maxWidth="128dp"
                        android:singleLine="false"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dip"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@+id/channelLogo"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/nowProgramName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textColor="#830000"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/nowProgramTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/nextProgramName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/livePlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/live_play" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/brandView"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dip"
                        android:layout_marginTop="10dip"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:dividerHeight="15dip"
                        android:scrollbars="vertical" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line" />
                    <!-- 星期横向排列 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/leftArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/left_arrow" />

                        <HorizontalScrollView
                            android:id="@+id/scrollView"
                            android:layout_width="795dip"
                            android:layout_height="45dip"
                            android:scrollbars="none" >

                            <LinearLayout
                                android:id="@+id/liveWeekContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </HorizontalScrollView>

                        <ImageView
                            android:id="@+id/rightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line" />
                    <!-- EPG信息 -->

                    <ListView
                        android:id="@+id/live_epg_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="95dip"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/epglist"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:scrollbars="vertical" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>