<?xml version="1.0" encoding="utf-8"?>
<!-- 登录弹出框样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="590dip"
    android:layout_height="377dip"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="45dp"
    android:background="@drawable/help_alert" >

    <!-- 退出按钮 -->

    <ImageView
        android:id="@+id/helpExitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dialog_exit" />
    <!-- 头部LOGO -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dip"
        android:textSize="20sp"
        android:layout_marginTop="7dip"
        android:text="提示"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/you_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="90dip"
        android:textSize="18sp"
        android:text="您确定要解除绑定" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxView"
        android:layout_marginBottom="20dip"
        android:background="@drawable/login_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/checkBoxView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/device_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/btn_focus"
            android:text="@string/device_ok" />
          <Button
            android:id="@+id/bingding_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_focus"
            android:visibility="gone"
            android:text="@string/device_ok" />

        <Button
            android:id="@+id/device_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/btn"
            android:text="@string/device_cancel" />
    </LinearLayout>

</RelativeLayout>