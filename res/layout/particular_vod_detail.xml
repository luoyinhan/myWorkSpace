<?xml version="1.0" encoding="utf-8"?>
<!-- 详情页面 影片信息部分 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/poster"
        android:layout_width="136dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="40dip"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dip"
            android:scaleType="matrix"
            android:src="@drawable/poster_border" />

        <com.coship.ott.view.CustormImageView
            android:id="@+id/pCularAssetIcon"
            android:layout_width="118dip"
            android:layout_height="166dip"
            android:layout_margin="9dip"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/gaoqingTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/tag_gaoqing"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/priceTag"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pCularAssetIcon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dip"
            android:background="@drawable/tag_price"
            android:gravity="center"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/poster" >

        <TextView
            android:id="@+id/assetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="#830000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/movie_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assetName"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/movie_time"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pCularAssetPDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assetName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/movie_time"
            android:singleLine="true"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/movie_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_time"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/movie_director"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pCularAssetDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_time"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/movie_director"
            android:singleLine="true"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/movie_screenwriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_director"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/movie_actors"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pCularAssetActors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_director"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/movie_screenwriter"
            android:singleLine="true"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_screenwriter"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/movie_type"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pCularAssetTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_screenwriter"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/movie_type"
            android:singleLine="true"
            android:textColor="#7F7F7F"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_type"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/particularPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="375dip"
                android:background="@drawable/play" />

            <Button
                android:id="@+id/particularAddFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:background="@drawable/collect" />

            <Button
                android:id="@+id/parShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>