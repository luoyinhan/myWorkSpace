<?xml version="1.0" encoding="utf-8"?>
<!-- 登录弹出框样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/user_register"
        android:layout_width="650dip"
        android:layout_height="520dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dip"
        android:background="@drawable/help_alert" >

        <!-- 退出按钮 -->

        <ImageView
            android:id="@+id/helpExitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/dialog_exit" />
        <!-- 头部LOGO -->

        <ImageView
            android:id="@+id/headLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:src="@drawable/top_logo_regist" />

        <!-- 登录窗口主体 -->

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="80dip"
            android:smoothScrollbar="true"
            android:stretchColumns="*" >

            <TableRow>

                <TextView
                    android:text="@string/user_prompt"
                    android:textColor="#484848" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/silver" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/user_register_name"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_name"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/username_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/user_register_name"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/username_edit"
                    android:text="@string/user_chars_info"
                    android:textColor="#484848"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/create_password"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_createpwd"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/createpwd_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/create_password"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:password="true"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/createpwd_edit"
                    android:text="@string/user_chars_info"
                    android:textColor="#484848"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/confirm_password"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_againpwd"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/againpwd_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/confirm_password"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:password="true"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/question"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_pwdquestion"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/questionEdit"
                    android:layout_width="260dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/question"
                    android:entries="@+array/num"
                    android:textSize="15dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_pwdanswer"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pwdanswer_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/answer"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:singleLine="true" />
            </RelativeLayout>

            <TableRow>

                <TextView
                    android:text="@string/user_card_binding"
                    android:textColor="#484848" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/silver" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_cardnum"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/cardnum_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/card_number"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" >

                <TextView
                    android:id="@+id/card_pwd"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="@string/user_register_cardpwd"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/cardpwd_edit"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/card_pwd"
                    android:background="@drawable/input_bg"
                    android:maxLength="32"
                    android:password="true"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dip"
                android:layout_marginBottom="20dip" >

                <Button
                    android:id="@+id/nextSubmitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_focus"
                    android:text="@string/user_next" />
            </RelativeLayout>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>