<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 推荐 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <include layout="@layout/topbar" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 头部推荐位及右边介绍 -->

                <RelativeLayout
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="352dip" >

                    <com.coship.ott.view.AutoScrollGallery
                        android:id="@+id/topGallery"
                        android:layout_width="match_parent"
                        android:layout_height="352dip"
                        android:layout_marginLeft="-260dp" />
                    <!-- 头部右侧简介 -->

                    <RelativeLayout
                        android:layout_width="260dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/list_right_film_bg"
                        android:orientation="vertical"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:paddingTop="35dip" >

                        <TextView
                            android:id="@+id/filmName"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/filmNameEn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filmName"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filmNameEn"
                            android:layout_marginBottom="20dip"
                            android:layout_marginTop="15dip"
                            android:src="@drawable/list_right_pointline"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/line"
                            android:layout_marginTop="6dip"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/screenwriter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/director"
                            android:layout_marginTop="3dip"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/movietime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/screenwriter"
                            android:layout_marginTop="3dip"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/resume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/screenwriter"
                            android:layout_marginTop="30dip"
                            android:ellipsize="end"
                            android:lineSpacingExtra="4dip"
                            android:maxLines="4"
                            android:singleLine="false"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dip"
                            android:gravity="center"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/recommendLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="50dip"
                    android:paddingLeft="50dip"
                    android:paddingRight="50dip"
                    android:paddingTop="5dip" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="333dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="48dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="298dip"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#2b2b2b"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="精彩电视直播"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/triangle" />
            </LinearLayout>

            <ListView
                android:id="@+id/live_recommend"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/bg_liverecommend"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/rc_divder"
                android:fadingEdge="none" >
            </ListView>
        </LinearLayout>

        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawout_btn"
            android:textSize="24dip" />
    </SlidingDrawer>

</RelativeLayout>