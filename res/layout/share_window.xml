<?xml version="1.0" encoding="utf-8"?>
<!-- 播放器评论弹出窗口样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discussWindow"
    android:layout_width="650dip"
    android:layout_height="457dip"
    android:layout_gravity="center"
    android:background="@drawable/help_alert"
    android:gravity="center"
    android:visibility="gone" >

    <!-- 退出按钮 -->

    <ImageView
        android:id="@+id/shareExitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-40dip"
        android:focusableInTouchMode="true"
        android:src="@drawable/dialog_exit" />
    <!-- 头部文字 -->

    <TextView
        android:id="@+id/discussTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dip"
        android:layout_marginTop="-20dip"
        android:text="@string/player_discuss_title"
        android:textColor="#484848"
        android:textSize="15sp" />

    <!-- 讨论窗口主体 -->

    <LinearLayout
        android:id="@+id/discussBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discussTitle"
        android:layout_marginTop="40dip"
        android:orientation="horizontal"
        android:paddingLeft="63dip" >

        <RelativeLayout
            android:layout_width="389dip"
            android:layout_height="259dip"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/discussEdit"
                android:layout_width="390dp"
                android:layout_height="224dp"
                android:background="#FFFFFF"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="140" />

            <TextView
                android:id="@+id/discussNum"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:gravity="center"
                android:text="@string/player_discuss_num"
                android:textColor="#B0B0B0"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.coship.ott.view.CustormImageView
                android:id="@+id/discussPoster"
                android:layout_width="124dip"
                android:layout_height="171dip"
                android:layout_margin="25dip"
                android:scaleType="centerInside"
                android:src="@drawable/poster_border" />

            <CheckBox
                android:id="@+id/checkSendPoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dip"
                android:button="@drawable/login_checkbox_button"
                android:text="@string/send_pic" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/share_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discussBody"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="7dp"
        android:background="@drawable/login_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_bg"
        android:orientation="horizontal" 
        android:layout_marginTop="10dip">

        <Button
            android:id="@+id/discussCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107dip"
            android:background="@drawable/btn"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="18sp" />

        <Button
            android:id="@+id/discussSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dip"
            android:background="@drawable/btn_focus"
            android:gravity="center"
            android:text="@string/send"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>