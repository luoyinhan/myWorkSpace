<?xml version="1.0" encoding="utf-8"?>
<!-- 播放器  历史记录列表项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/playTagImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/player_bm_play" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <com.coship.ott.view.CustormImageView
            android:id="@+id/bookMarkImage"
            android:layout_width="118dip"
            android:layout_height="166dip"
            android:layout_margin="9dip"
            android:scaleType="fitXY" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/bookMarkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="185dp"
            android:singleLine="true"
            android:text="重案六组第3集"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bookMarkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="185dp"
            android:singleLine="true"
            android:text="观看时长不足1分钟"
            android:textColor="#7F7F7F"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>