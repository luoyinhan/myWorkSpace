<?xml version="1.0" encoding="utf-8"?>
<!-- 推荐品牌节目详情页面      品牌节目信息部分 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="212dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="200dip"
                android:layout_height="130dip"
                android:layout_margin="6dip"
                android:scaleType="fitXY"
                android:src="@drawable/live_poster_border" />

            <com.coship.ott.view.CustormImageView
                android:id="@+id/channelBrandPoster"
                android:layout_width="194dip"
                android:layout_height="116dip"
                android:layout_margin="10dip"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/gaoqingTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/tag_gaoqing" />

            <TextView
                android:id="@+id/priceTag"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/channelBrandPoster"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dip"
                android:background="@drawable/tag_price"
                android:gravity="center"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="#830000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brandName"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dip"
                android:singleLine="true"
                android:textColor="#8a8a8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/playDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/channelName"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="#8a8a8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playDate"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/host"
                android:textColor="#7F7F7F"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/brandHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playDate"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/host"
                android:singleLine="true"
                android:textColor="#7F7F7F"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/host"
                android:layout_marginRight="10dp"
                android:layout_marginTop="27dp"
                android:text="@string/intro"
                android:textColor="#7F7F7F"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/brandIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brandHost"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/intro"
                android:maxLines="2"
                android:textColor="#7F7F7F"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/typeSeeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/branch_btn_sel"
            android:gravity="center"
            android:text="@string/see_back"
            android:textColor="#484848"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/typeBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/branch_btn"
            android:gravity="center"
            android:text="@string/book"
            android:textColor="#7F7F7F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/particularDiscusses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="325dip"
            android:background="@drawable/branch_btn"
            android:gravity="center"
            android:text="@string/discusses"
            android:textColor="#7F7F7F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/particularAddFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:background="@drawable/collect"
            android:visibility="invisible" />

        <Button
            android:id="@+id/parShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share" />
    </LinearLayout>

</LinearLayout>