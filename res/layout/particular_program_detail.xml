<?xml version="1.0" encoding="utf-8"?>
<!-- 详情页面 影片信息部分 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dip"
    android:layout_margin="5dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/poster"
        android:layout_width="136dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="40dip"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dip"
            android:scaleType="matrix"
            android:src="@drawable/poster_border" />

        <com.coship.ott.view.CustormImageView
            android:id="@+id/programPoster"
            android:layout_width="118dip"
            android:layout_height="166dip"
            android:layout_margin="9dip"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/gaoqingTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/tag_gaoqing" />

        <TextView
            android:id="@+id/priceTag"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/programPoster"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dip"
            android:background="@drawable/tag_price"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/programeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#830000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/programeName"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:singleLine="true"
                android:textColor="#8a8a8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/playDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/channelName"
                android:layout_marginRight="0dp"
                android:singleLine="true"
                android:textColor="#8a8a8a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playDate"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/intro"
                android:textColor="#7F7F7F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/programIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playDate"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/intro"
                android:maxLines="2"
                android:maxLength="50"
                android:textColor="#7F7F7F"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/programePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="375dip"
                android:background="@drawable/play" />

            <Button
                android:id="@+id/particularAddFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:background="@drawable/collect"
                android:visibility="invisible" />

            <Button
                android:id="@+id/parShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>