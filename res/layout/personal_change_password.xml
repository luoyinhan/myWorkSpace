<?xml version="1.0" encoding="utf-8"?>
<!-- 登录弹出框样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="45dip"
    android:background="@drawable/bg" >

    <!-- 登录窗口主体 -->

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:smoothScrollbar="true"
        android:stretchColumns="*" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/changepwd_title"
                android:textColor="#ff2200" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@color/silver" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/user_name_text"
                android:textColor="#484848"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userNameText"
                android:text="TONY"
                android:textColor="#484848" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/old_user_pwd"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/old_user_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/oldPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/old_user_pwd"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/new_user_pwd"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/new_user_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/new_user_pwd"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reset_input_pwd_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/reset_input_pwd"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/reset_input_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/reset_input_pwd"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_input_pwd_layout"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/userSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/btn_focus"
                android:text="@string/login_submit" />

            <Button
                android:id="@+id/userEmptyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/btn"
                android:text="@string/login_empty" />
        </LinearLayout>

        <TableRow>

            <TextView
                android:text="@string/card_title"
                android:textColor="#ff2200" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@color/silver" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/new_card_text"
                android:textColor="#484848"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/new_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userNameText"
                android:text="TONY"
                android:textColor="#484848" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/old_card_pwd"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/old_card_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/oldCardPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/old_card_pwd"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/new_card_pwd"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/new_card_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newCardPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/new_card_pwd"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reset_input_pwd_layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:id="@+id/reset_input_pwd2"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="@string/reset_input_pwd"
                android:textColor="#484848"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/inputCardPWDEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/reset_input_pwd2"
                android:background="@drawable/input_bg"
                android:password="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_input_pwd_layout2"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cardSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/btn_focus"
                android:text="@string/login_submit" />

            <Button
                android:id="@+id/cardEmptyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/btn"
                android:text="@string/login_empty" />
        </LinearLayout>
    </TableLayout>

</RelativeLayout>