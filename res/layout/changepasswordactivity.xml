<?xml version="1.0" encoding="utf-8"?>
<!-- 登录弹出框样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="590dip"
    android:layout_height="377dip"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="45dp"
    android:background="@drawable/help_alert" >

    <!-- 退出按钮 -->

    <ImageView
        android:id="@+id/helpExitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dialog_exit" />
    <!-- 头部LOGO -->

    <ImageView
        android:id="@+id/headLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/top_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="10dip"
        android:text="多屏看用户密码重置"
        android:textColor="#ffffff"
        android:textSize="18dip" />

    <!-- 登录窗口主体 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/view1"
        android:layout_marginTop="0dip"
        android:background="@color/silver"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:paddingBottom="20dp"
        android:paddingTop="60dp" >

        <Button
            android:id="@+id/btSecretly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dip"
            android:background="@drawable/tab_focus"
            android:text="@string/btn_secretly" />

        <Button
            android:id="@+id/btCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/btSecretly"
            android:background="@drawable/tab_focus"
            android:text="@string/btn_card"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_layout"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="100dip"
        android:text="通过验证，请输入新的多屏看用户密码："
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/new_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLogo"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="110dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_user_pwd"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:gravity="right"
            android:text="@string/new_user_pwd"
            android:textColor="#484848"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/loginNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/protaction_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password_layout"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/protaction_loginPWD"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dip"
            android:gravity="right"
            android:text="@string/pwd_new2"
            android:textColor="#484848"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/protaction_loginPWDEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/checkBoxView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/helpSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/btn_focus"
            android:text="@string/login_submit" />

        <Button
            android:id="@+id/EmptyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/btn"
            android:text="@string/login_empty" />
    </LinearLayout>

</RelativeLayout>